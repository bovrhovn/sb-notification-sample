@page
@model SbNotifierDashboard.Pages.Notification.NotifyPageModel
@{
    ViewData["Title"] = "Notification options";
}

<h1>
    Notification sender
</h1>
<p>
    Enter text in below form and select type of message to send notification to client.
</p>
<form method="post">
    <div class="form-row">
        <div class="form-group col-12">
            <label>Select type of notification</label>
            @foreach (var currentMessageType in Model.MessageTypes)
            {
                <div class="form-check">
                    <input type="radio" class="form-check-input" asp-for="MessageType" value="@currentMessageType"/>
                    @currentMessageType
                </div>
            }
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-12">
            <label for="text">Enter text</label>
            <input type="text" class="form-control" asp-for="Text" id="text">
        </div>
    </div>
    <hr/>
    <button type="submit" class="float-right btn btn-primary">Send notification <i class="fas fa-arrow-circle-right"></i></button>
</form>
<p class="text-black-50 text-info">
    @Model.Message
</p>